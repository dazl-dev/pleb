{
  "name": "pleb",
  "description": "a casual publisher",
  "version": "6.0.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "pleb": "bin/pleb.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "mocha \"./dist/test/**/*.test.js\"",
    "lint": "eslint .",
    "prepack": "npm run build",
    "prettify": "npx prettier . --write"
  },
  "dependencies": {
    "@wixc3/resolve-directory-context": "^4.0.0",
    "colorette": "^2.0.20",
    "commander": "^11.0.0",
    "p-queue": "^7.4.1",
    "promise-assist": "^2.0.1",
    "semver": "^7.5.4",
    "type-fest": "^4.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.6",
    "@types/mocha": "^10.0.1",
    "@types/node": "16",
    "@types/semver": "^7.5.3",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "chai": "^4.3.8",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.4",
    "typescript": "~5.2.2"
  },
  "files": [
    "bin",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "engines": {
    "node": ">=16"
  },
  "keywords": [
    "publish",
    "packages",
    "workspace",
    "npm",
    "yarn",
    "ci",
    "automation",
    "upgrade"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/pleb.git"
}

{
  "name": "pleb",
  "description": "a casual publisher",
  "version": "4.0.3",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "pleb": "bin/pleb.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:spec",
    "test:spec": "mocha \"./dist/test/**/*.spec.js\"",
    "lint": "eslint .",
    "prepack": "npm run build",
    "prettify": "npx prettier . --write"
  },
  "dependencies": {
    "@wixc3/resolve-directory-context": "^2.0.0",
    "colorette": "^2.0.16",
    "commander": "^9.0.0",
    "p-queue": "^7.2.0",
    "promise-assist": "^1.3.0",
    "semver": "^7.3.5",
    "type-fest": "^2.12.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "16",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "~5.13.0",
    "@typescript-eslint/parser": "~5.12.1",
    "chai": "^4.3.6",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "mocha": "^9.2.1",
    "rimraf": "^3.0.2",
    "typescript": "~4.6.2"
  },
  "files": [
    "bin",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "engines": {
    "node": ">=12"
  },
  "keywords": [
    "publish",
    "packages",
    "workspace",
    "npm",
    "yarn",
    "ci",
    "automation",
    "upgrade"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/pleb.git"
}

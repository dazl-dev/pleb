{
  "name": "pleb",
  "description": "a casual publisher",
  "version": "6.0.0",
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "dist/index.d.ts",
  "bin": {
    "pleb": "bin/pleb.js"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "npm run clean",
    "build": "tsc --build",
    "pretest": "npm run lint && npm run build",
    "test": "npm run test:only",
    "test:only": "node --test ./dist/test",
    "lint": "eslint .",
    "prepack": "npm run build",
    "prettify": "npx prettier . --write"
  },
  "dependencies": {
    "@wixc3/resolve-directory-context": "^4.0.0",
    "colorette": "^2.0.20",
    "commander": "^12.0.0",
    "p-queue": "^8.0.1",
    "promise-assist": "^2.0.1",
    "semver": "^7.6.0",
    "type-fest": "^4.11.1"
  },
  "devDependencies": {
    "@types/node": "18",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "~5.4.2"
  },
  "files": [
    "bin",
    "dist",
    "!dist/test",
    "src",
    "!*/tsconfig.{json,tsbuildinfo}"
  ],
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "publish",
    "packages",
    "workspace",
    "npm",
    "yarn",
    "ci",
    "automation",
    "upgrade"
  ],
  "publishConfig": {
    "access": "public"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true
  },
  "license": "MIT",
  "repository": "git@github.com:wixplosives/pleb.git"
}
